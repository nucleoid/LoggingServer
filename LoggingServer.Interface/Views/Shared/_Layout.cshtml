<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/mint-choc/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-timepicker-addon.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/formUtilities.js")" type="text/javascript"></script>
    <style type="text/css">
        @ViewBag.Style
    </style>
</head>
<body class="ui-widget-content">
    <div class="page">
        <div id="header" class="ui-widget-header ui-corner-bottom">
            <div id="logindisplay" class="ui-state-default ui-corner-all">@Html.Partial("_logOn")</div>
            <div id="title">
                <h1>@Html.ActionLink("Logging Server", "Index", "Home")</h1>
            </div>
            <div id="menucontainer" class="ui-tabs ui-widget ui-widget-content ui-corner-all">
                <ul class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
                    <li class="ui-state-default">@Html.ActionLink("Projects - Search", "Index", "Logs")</li>
                    <li class="ui-state-default">@Html.ActionLink("Saved Searches", "Index", "Filter")</li>
                    <li class="ui-state-default">@Html.ActionLink("Subscriptions", "Index", "Subscriptions")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
        </div>
    </div>
    <script type="text/javascript" charset="utf-8">
        $(function () {
            $("input:submit, input:button, a.ui-button").button();
        });
	</script>
</body>
</html>
